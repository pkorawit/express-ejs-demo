<% include ../partials/header %>
<form action="/products/update" method="post">
<div class="form-group">
  <label for="">ID</label>
  <input type="text"
    class="form-control" name="id" id="" aria-describedby="helpId" placeholder="" value="<%= product.id %>">
  <small id="helpId" class="form-text text-muted">Help text</small>
  <label for="">Title</label>
  <input type="text"
    class="form-control" name="title" id="" aria-describedby="helpId" placeholder="" value="<%= product.title %>">
  <small id="helpId" class="form-text text-muted">Help text</small>  
  <label for="">Prize</label>
  <input type="text"
    class="form-control" name="price" id="" aria-describedby="helpId" placeholder="" value="<%= product.price %>">
  <small id="helpId" class="form-text text-muted">Help text</small>
  <label for="">Create At</label>
  <input type="datetime" readonly
    class="form-control" name="created_at" id="" aria-describedby="helpId" placeholder="" value="<%= product.created_at %>">
  <small id="helpId" class="form-text text-muted">Help text</small>
  <a name="" id="" class="btn btn-secondary" href="/products" role="button">Cancel</a>
  <button type="submit" class="btn btn-primary">Save</button>

  <!-- Button trigger modal -->
  <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modelId">
    Delete
  </button>
</form>  
</div>  
  <!-- Modal -->
  <form action="/products/delete/<%= product.id %>" method="post">
  <div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
        <h4 class="modal-title" id="modelTitleId">Confirm Delete</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>          
        </div>
        <div class="modal-body">
          Do you watn to delete [<%= product.title %>] ?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-danger">Delete</button>
        </div>
      </div>
    </div>
  </div>
  </form>
</div>
<% include ../partials/footer %>